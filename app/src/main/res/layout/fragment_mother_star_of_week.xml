<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MotherStarOfWeekFragment">


    <TextView
        android:id="@+id/stdNameBox"
        android:layout_width="314dp"
        android:layout_height="432dp"
        android:layout_centerInParent="true"
        android:background="@drawable/rounded_corner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.497" />

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/starOfWeek"
        android:layout_width="155dp"
        android:layout_height="97dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/starImg"
        app:layout_constraintEnd_toEndOf="@+id/starImg"
        app:layout_constraintStart_toStartOf="@+id/starImg"
        app:layout_constraintTop_toTopOf="@+id/starImg"
        app:layout_constraintVertical_bias="0.614" />

    <Button
        android:id="@+id/back"
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/buttons_shape"
        android:fontFamily="monospace"
        android:text="رجوع"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/stdNameBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/stdNameBox"
        app:layout_constraintVertical_bias="0.975" />


    <ImageView
        android:id="@+id/starImg"
        android:layout_width="251dp"
        android:layout_height="253dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="88dp"
        android:src="@drawable/star"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/stdNameBox" />

    <TextView
        android:id="@+id/starTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="نجم الأسبوع"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/starImg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/stdNameBox" />


</android.support.constraint.ConstraintLayout>