<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditStudentPersonalInfoFragment">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:id="@+id/editTextWieght"
        android:layout_width="101dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/editTextFirstName"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="الوزن"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/childTxt" />

    <EditText
        android:id="@+id/editTextHight"
        android:layout_width="101dp"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/editTextWieght"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="الطول"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/editTextWieght"
        app:layout_constraintTop_toBottomOf="@+id/childTxt" />

    <EditText
        android:id="@+id/editTextLastName"
        android:layout_width="112dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="العائلة"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/editTextMiddleName"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/std" />

    <EditText
        android:id="@+id/editTextMiddleName"
        android:layout_width="104dp"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/editTextLastName"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="اسم الأب"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/editTextFirstName"
        app:layout_constraintTop_toBottomOf="@+id/std" />

    <EditText
        android:id="@+id/editTextFirstName"
        android:layout_width="101dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/editTextLastName"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="الاسم الأول"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/std" />

    <TextView
        android:id="@+id/childTxt"
        android:layout_width="143dp"
        android:layout_height="30dp"
        android:layout_above="@+id/editTextWieght"
        android:layout_alignEnd="@+id/editTextWieght"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="204dp"
        android:text="المعلومات الصحية"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.964"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleText" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_alignEnd="@+id/editTextWieght"
        android:layout_centerVertical="true"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="116dp"
        android:text="تاريخ الميلاد"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleText" />

    <TextView
        android:id="@+id/std"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_above="@+id/editTextLastName"
        android:layout_alignStart="@+id/editTextWieght"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="20dp"
        android:text="المعلومات الشخصية"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleText" />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/cancelButton"
        android:layout_marginTop="24dp"
        android:text="معلومات الطالب"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/editBtn"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="28dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/buttons_shape"
        android:text="إلغاء"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/editBtn"
        app:layout_constraintHorizontal_bias="0.76"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextHight"
        app:layout_constraintVertical_bias="0.281" />

    <Button
        android:id="@+id/editBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="76dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/buttons_shape"
        android:text="تعديل"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextWieght"
        app:layout_constraintVertical_bias="0.268" />

    <Spinner
        android:id="@+id/bloodType"
        android:layout_width="110dp"
        android:layout_height="45dp"
        android:layout_alignStart="@+id/editTextLastName"
        android:layout_alignTop="@+id/editTextWieght"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:entries="@array/blood_types"
        app:layout_constraintEnd_toStartOf="@+id/editTextHight"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/childTxt"></Spinner>


    <Spinner
        android:id="@+id/day"
        android:layout_width="101dp"
        android:layout_height="45dp"
        android:layout_alignStart="@+id/editTextFirstName"
        android:layout_below="@+id/textView7"
        android:layout_marginEnd="16dp"
        android:entries="@array/days"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"></Spinner>

    <Spinner
        android:id="@+id/month"
        android:layout_width="104dp"
        android:layout_height="45dp"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="20dp"
        android:entries="@array/months"
        app:layout_constraintEnd_toStartOf="@+id/day"
        app:layout_constraintTop_toTopOf="@+id/day"></Spinner>

    <Spinner
        android:id="@+id/year"
        android:layout_width="109dp"
        android:layout_height="45dp"
        android:layout_alignStart="@+id/editTextLastName"
        android:layout_below="@+id/textView7"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:entries="@array/years"
        app:layout_constraintEnd_toStartOf="@+id/month"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/day"></Spinner>


</android.support.constraint.ConstraintLayout>