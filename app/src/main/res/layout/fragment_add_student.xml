<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddStudentFragment">

    <!-- TODO: Update blank fragment layout -->


    <EditText
        android:id="@+id/editTextWieght"
        android:layout_width="101dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/editTextFirstName"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="الوزن"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/editTextHight"
        android:layout_width="101dp"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/editTextWieght"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:hint="الطول"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/editTextWieght"
        app:layout_constraintTop_toBottomOf="@+id/month" />

    <EditText
        android:id="@+id/editTextLastName"
        android:layout_width="112dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="العائلة"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/editTextMiddleName"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleText" />

    <EditText
        android:id="@+id/editTextMiddleName"
        android:layout_width="104dp"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/editTextLastName"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:hint="اسم الأب"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/editTextFirstName"
        app:layout_constraintTop_toTopOf="@+id/titleText" />

    <EditText
        android:id="@+id/editTextFirstName"
        android:layout_width="101dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/editTextLastName"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="الاسم الأول"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/std" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="143dp"
        android:layout_height="30dp"
        android:layout_above="@+id/editTextWieght"
        android:layout_alignEnd="@+id/editTextWieght"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="المعلومات الصحية"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/day" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_alignEnd="@+id/editTextWieght"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:text="تاريخ الميلاد"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNationalId" />

    <TextView
        android:id="@+id/std"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_above="@+id/editTextLastName"
        android:layout_alignStart="@+id/editTextWieght"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp"
        android:text="المعلومات الشخصية"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleText" />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/cancelButton"
        android:layout_marginTop="4dp"
        android:text="معلومات إضافة الطالب"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/editBtn"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="28dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/buttons_shape"
        android:text="إلغاء"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/editBtn"
        app:layout_constraintHorizontal_bias="0.696"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextHight"
        app:layout_constraintVertical_bias="0.714" />

    <Button
        android:id="@+id/editBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="76dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/buttons_shape"
        android:text="إضافة طالب"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextWieght"
        app:layout_constraintVertical_bias="0.711" />

    <EditText
        android:id="@+id/editTextNationalId"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editTextWieght"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:hint="السجل المدني"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextFirstName" />

    <Spinner
        android:id="@+id/bloodType"
        android:layout_width="110dp"
        android:layout_height="45dp"
        android:layout_alignStart="@+id/editTextLastName"
        android:layout_alignTop="@+id/editTextWieght"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="52dp"
        android:entries="@array/blood_types"
        app:layout_constraintEnd_toStartOf="@+id/editTextHight"
        app:layout_constraintHorizontal_bias="0.958"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/year"></Spinner>


    <Spinner
        android:id="@+id/day"
        android:layout_width="101dp"
        android:layout_height="45dp"
        android:layout_alignStart="@+id/editTextFirstName"
        android:layout_below="@+id/textView7"
        android:layout_marginEnd="8dp"
        android:entries="@array/days"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"></Spinner>

    <Spinner
        android:id="@+id/month"
        android:layout_width="104dp"
        android:layout_height="45dp"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="44dp"
        android:entries="@array/months"
        app:layout_constraintEnd_toStartOf="@+id/day"
        app:layout_constraintTop_toBottomOf="@+id/gender"></Spinner>

    <Spinner
        android:id="@+id/year"
        android:layout_width="109dp"
        android:layout_height="45dp"
        android:layout_alignStart="@+id/editTextLastName"
        android:layout_below="@+id/textView7"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="44dp"
        android:entries="@array/years"
        app:layout_constraintEnd_toStartOf="@+id/month"
        app:layout_constraintHorizontal_bias="0.676"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gender"></Spinner>

    <Spinner
        android:id="@+id/gender"
        android:layout_width="92dp"
        android:layout_height="43dp"
        android:layout_alignStart="@+id/editTextLastName"
        android:layout_alignTop="@+id/editTextNationalId"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:entries="@array/gender_type"
        app:layout_constraintEnd_toStartOf="@+id/editTextNationalId"
        app:layout_constraintHorizontal_bias="0.854"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextLastName"></Spinner>


</android.support.constraint.ConstraintLayout>
