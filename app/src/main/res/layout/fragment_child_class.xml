<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".childProfileFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/stdNameBox"
        android:layout_width="314dp"
        android:layout_height="432dp"
        android:layout_centerInParent="true"
        android:background="@drawable/rounded_corner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.444" />

    <ImageView
        android:id="@+id/album"
        android:layout_width="69dp"
        android:layout_height="68dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="96dp"
        android:src="@drawable/photoalbum"
        app:layout_constraintEnd_toEndOf="@+id/stdNameBox"
        app:layout_constraintTop_toTopOf="@+id/stdNameBox" />

    <ImageView
        android:id="@+id/allstd"
        android:layout_width="82dp"
        android:layout_height="78dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/album"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/smile"
        app:layout_constraintEnd_toEndOf="@+id/stdNameBox"
        app:layout_constraintTop_toBottomOf="@+id/album" />

    <ImageView
        android:id="@+id/star"
        android:layout_width="77dp"
        android:layout_height="76dp"
        android:layout_alignEnd="@+id/album"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="44dp"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/talent"
        app:layout_constraintBottom_toBottomOf="@+id/stdNameBox"
        app:layout_constraintEnd_toEndOf="@+id/stdNameBox"
        app:layout_constraintTop_toBottomOf="@+id/allstd"
        app:layout_constraintVertical_bias="0.921" />

    <TextView
        android:id="@+id/className"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="TextView"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/stdNameBox"
        app:layout_constraintStart_toStartOf="@+id/stdNameBox"
        app:layout_constraintTop_toTopOf="@+id/stdNameBox" />

    <TextView
        android:id="@+id/txtAlbum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/txtAllstd"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="116dp"
        android:text="ألبوم الصور"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/album"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="@+id/stdNameBox"
        app:layout_constraintTop_toTopOf="@+id/stdNameBox" />

    <TextView
        android:id="@+id/txtAllstd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="72dp"
        android:text="طلاب الفصل"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/allstd"
        app:layout_constraintHorizontal_bias="0.827"
        app:layout_constraintStart_toStartOf="@+id/stdNameBox"
        app:layout_constraintTop_toBottomOf="@+id/txtAlbum" />

    <TextView
        android:id="@+id/txtStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtAlbum"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        android:text="نجم الأسبوع"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/stdNameBox"
        app:layout_constraintEnd_toStartOf="@+id/star"
        app:layout_constraintHorizontal_bias="0.785"
        app:layout_constraintStart_toStartOf="@+id/stdNameBox"
        app:layout_constraintTop_toBottomOf="@+id/txtAllstd"
        app:layout_constraintVertical_bias="0.016" />



</android.support.constraint.ConstraintLayout>